{
  "name": "helix-markdown-preview",
  "version": "1.0.0",
  "description": "",
  "main": "background.js",
  "scripts": {
    "test": "nyc --reporter=text --reporter=lcov mocha",
    "test-ci": "npm run lint && npm run test && codecov",
    "integration": "nyc --reporter=text --reporter=lcov mocha test/integration/*.js --timeout 30000",
    "it": "npm run integration",
    "lint": "npx eslint .",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "repository": "https://github.com/rofe/helix-markdown-preview",
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "7.0.14",
    "@semantic-release/github": "^5.2.10",
    "chai": "^4.2.0",
    "codecov": "3.5.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "lint-staged": "^9.0.0",
    "fs-extra": "^8.0.0",
    "jsdom": "^15.0.0",
    "mocha": "^6.1.3",
    "mock-browser": "^0.92.14",
    "nyc": "14.1.1",
    "puppeteer": "^1.14.0",
    "puppeteer-to-istanbul": "^1.2.2",
    "semantic-release": "^15.13.3",
    "sinon": "^7.3.1",
    "sinon-chrome": "^3.0.1"
  },
  "nyc": {
    "include": "src",
    "exclude": "src/lib/*.js"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
